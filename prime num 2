#include <iostream>
using namespace std;

double area(double length, double width);

bool isPrime(int n);

int sumDigits(int n);

int main() {

area(2, 4);

isPrime(11);

sumDigits(5555);

}

double area(double length, double width) {
cout << length * width << endl;
return true;
}

bool isPrime(int n) {
for (int i = 2; i <= sqrt(n); ++i) {
if (n % i == 0) {
cout << n << " is not a prime number" << endl;
return false;
}
}
cout << n << " is a prime number" << endl;
return true;
}

int sumDigits(int n) {
int sum = 0;
int temp = 0;
while (n > 1) {
temp = n % 10;
n = n / 10;
sum += temp;
}
cout << sum << endl;
return sum;
}
